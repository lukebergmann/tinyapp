<!-- THIS PAGE IS THE HEADER WHICH CONTAINS THE NAVIGATION MENU AND THE LINKS TO /urls and /urls/new -->
<style>
  .login{color: whitesmoke;
  opacity: 0.7;}
  .logged {color: whitesmoke;
  opacity: 0.7;}
</style>
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if(users[user_id]) {  %> 
        <label class="logged">Logging in as: <%= users[user_id].email %> </label>
        <a href="/logout" class="btn btn-outline-dark">
          Logout
        </a> 
        <% } else { %> 
        <a href="/login" class="btn btn-outline-light"> 
          Login
        </a>
        <a href="/register" class="btn btn-outline-dark"> 
          Register
        </a>
        <% } %> 
      </div>
    </nav>
  </header>